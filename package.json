{
  "name": "corebot",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "packageManager": "pnpm@10.28.1",
  "main": "dist/main.js",
  "files": [
    "dist",
    "README.md",
    "ARCHITECTURE.md",
    "RUNBOOK.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "tsx src/main.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/main.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "tsx --test test/**/*.test.ts",
    "verify": "pnpm run typecheck && pnpm run test",
    "ops:db:backup": "tsx scripts/db-backup.ts",
    "ops:db:restore": "tsx scripts/db-restore.ts",
    "commit": "pnpm git-cz"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "better-sqlite3": "^11.0.0",
    "cron-parser": "^4.9.0",
    "dotenv": "^16.4.5",
    "nanoid": "^5.0.7",
    "pino": "^9.2.0",
    "yaml": "^2.4.5",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.23.5"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.1",
    "commitizen": "^4.3.1",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
