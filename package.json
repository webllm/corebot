{
  "name": "@corebot/core",
  "version": "0.3.0",
  "description": "Lightweight but capable TypeScript bot architecture.",
  "type": "module",
  "packageManager": "pnpm@10.28.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "corebot": "dist/bin.js"
  },
  "files": [
    "dist",
    "README.md",
    "ARCHITECTURE.md",
    "RUNBOOK.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/webllm/corebot.git"
  },
  "scripts": {
    "dev": "tsx src/main.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/bin.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "tsx --test test/*.test.ts",
    "verify": "pnpm run typecheck && pnpm run test",
    "smoke:package": "tsx scripts/smoke-package.ts",
    "ops:db:backup": "tsx scripts/db-backup.ts",
    "ops:db:restore": "tsx scripts/db-restore.ts",
    "commit": "pnpm git-cz"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "better-sqlite3": "^12.6.2",
    "cron-parser": "^5.5.0",
    "dotenv": "^17.2.4",
    "nanoid": "^5.1.6",
    "pino": "^10.3.0",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.2.2",
    "commitizen": "^4.3.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "keywords": [
    "bot",
    "agent",
    "chatbot"
  ],
  "author": "unadlib",
  "license": "MIT"
}
